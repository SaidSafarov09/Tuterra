{
    "providers": [
        "node"
    ],
    "nixPackages": [
        "nodejs_20",
        "openssl"
    ],
    "phases": {
        "install": {
            "cmds": [
                "npm ci",
                "npx prisma generate --schema=prisma/schema.prisma"
            ]
        },
        "build": {
            "cmds": [
                "npm run build"
            ],
            "cacheDirectories": [
                ".next/cache",
                "node_modules/.cache"
            ]
        }
    }
}