{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/**/*",
          ".next/**/*",
          "prisma/**/*"
        ]
      }
    }
 ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30
    }
  }
}